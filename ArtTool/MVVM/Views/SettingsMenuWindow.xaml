<Window x:Class="ArtTool.Views.SettingsMenuWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ArtTool.Views"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400" Background="#3F000000"
             WindowStyle="None">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <CheckBox Margin="5"/>
            <CheckBox Margin="5"/>
            <CheckBox Margin="5"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Label Content="Toggle Switch 1" Foreground="White"/>
            <Label Content="Toggle Switch 2" Foreground="White"/>
            <Label Content="Toggle Switch 3" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
