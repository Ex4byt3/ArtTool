<Window x:Class="ArtTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArtTool"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        ResizeMode="CanResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#202020">

    <WindowChrome.WindowChrome>
        <WindowChrome 
        CaptionHeight="30"
        ResizeBorderThickness="5" />
    </WindowChrome.WindowChrome>

    <Grid x:Name="MainGrid">
        <Grid VerticalAlignment="Top" Background="#151515">
            <StackPanel Height="30" WindowChrome.IsHitTestVisibleInChrome="True" VerticalAlignment="Center" HorizontalAlignment="Right" Orientation="Horizontal">
                <Button x:Name="MinimizeButton" Content="-" Height="25" Width="25" Margin="2"/>
                <Button x:Name="MaximizeButton" Content="+" Height="25" Width="25" Margin="2"/>
                <Button x:Name="CloseButton" Content="x" Height="25" Width="25" Margin="2"/>
            </StackPanel>
        </Grid>
        <Grid Name="ImageWindow" Margin="0,30,0,30" Background="#101010">
            <Image Name="RefImage" Stretch="Uniform"
                   Source="{Binding imagePath}"/>
            <Grid HorizontalAlignment="Right" VerticalAlignment="Bottom">
                <TextBlock Text="{Binding duration}" Name="RemainingTime" Foreground="#E5E5E5" FontSize="30"/>
            </Grid>
        </Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button Content="1" Height="25" Width="25" Margin="2"/>
                <Button Content="2" Height="25" Width="25" Margin="2"/>
                <Button Content="3" Height="25" Width="25" Margin="2"/>
                <Button Content="4" Height="25" Width="25" Margin="2"/>
                <Button Content="5" Height="25" Width="25" Margin="2"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
