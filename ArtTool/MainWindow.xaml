<Window x:Class="ArtTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArtTool"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        ResizeMode="CanResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#202020">

    <WindowChrome.WindowChrome>
        <WindowChrome 
        CaptionHeight="30"
        ResizeBorderThickness="5" />
    </WindowChrome.WindowChrome>

    <Grid x:Name="MainGrid">
        <Grid VerticalAlignment="Top" Background="#151515">
            <StackPanel Height="30" WindowChrome.IsHitTestVisibleInChrome="True" VerticalAlignment="Center" HorizontalAlignment="Right" Orientation="Horizontal">
                <Button x:Name="MinimizeButton" Content="-" Height="25" Width="25" Margin="2"/>
                <Button x:Name="MaximizeButton" Content="+" Height="25" Width="25" Margin="2"/>
                <Button x:Name="CloseButton" Content="x" Height="25" Width="25" Margin="2"/>
            </StackPanel>
        </Grid>
        <Grid Name="ImageWindow" Margin="0,30,0,30" Background="#101010">
            <Image Name="RefImage" Stretch="Uniform"
                   Source="{Binding imagePath}"/>
            <Grid HorizontalAlignment="Right" VerticalAlignment="Bottom">
                <TextBlock Text="{Binding duration}" Name="RemainingTime" Foreground="#E5E5E5" FontSize="30"/>
            </Grid>
        </Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" RenderTransformOrigin="0.552,0.448">
                <Button Name="Button_settings"  Height="25" Width="25" Margin="2" Click="Button_settings_Click">
                    <Image Source="/resources/icons/settings.ico" Height="18" Width="18"></Image> 
                </Button>
                <Button Name="Button_previous" Height="25" Width="25" Margin="2">
                    <Image Source="/resources/icons/prev.ico" Height="15" Width="15"></Image> 
                </Button>
                <Button Name="Button_playpause" Height="25" Width="25" Margin="2">
                    <Image Source="/resources/icons/playpause.ico" Height="18" Width="18"></Image> 
                </Button>
                <Button Name="Button_next" Height="25" Width="25" Margin="2">
                    <Image Source="/resources/icons/next.ico" Height="15" Width="15"></Image>
                </Button>
                <Button Name="Button_stop" Height="25" Width="25" Margin="2">
                    <Image Source="/resources/icons/stop.ico" Height="15" Width="15"></Image>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
